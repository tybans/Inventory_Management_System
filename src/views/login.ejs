<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Login</title>
  <!-- Tailwind Play CDN (good for demo) -->
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex items-center justify-center">
  <div class="w-full max-w-md mx-auto p-6">
    <div class="bg-white p-8 rounded-lg shadow">
      <h1 class="text-2xl font-semibold text-center mb-6">Sign in</h1>

      <div id="alertBox" class="hidden text-red-600 text-sm mb-4"></div>

      <form id="loginForm" class="space-y-4">
        <div>
          <label class="block text-sm">Email or Username</label>
          <input id="identifier" name="identifier" required
                 class="mt-1 block w-full rounded border px-3 py-2" placeholder="email@example.com or username" />
        </div>

        <div>
          <label class="block text-sm">Password</label>
          <div class="mt-1 relative">
            <input id="password" name="password" type="password" required
                   class="block w-full rounded border px-3 py-2 pr-20" placeholder="Your password" />
            <button id="showPassword" type="button"
                    class="absolute right-1 top-1/2 -translate-y-1/2 px-3 py-1 text-sm rounded bg-gray-100">Show</button>
          </div>
        </div>

        <button id="submitBtn" type="submit"
                class="w-full py-2 rounded bg-indigo-600 text-white font-medium">Sign In</button>
      </form>
    </div>

    <p class="text-center text-sm text-gray-500 mt-4">Use a registered email or username to sign in.</p>
  </div>

  <script src="/js/login.js"></script>
</body>
</html>
